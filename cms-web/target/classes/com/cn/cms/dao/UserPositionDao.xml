<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cn.cms.dao.UserPositionDao" >

    <resultMap id="base" type="com.cn.cms.po.Base">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="del_tag" property="delTag" />
        <result column="last_modify_user_id" property="lastModifyUserId" />
    </resultMap>
    <resultMap type="com.cn.cms.po.UserPosition" id="userPosition" extends="base">
        <result column="position_id" property="positionId" />
        <result column="user_id" property="userId" />
    </resultMap>


    <sql id="delTag"> where del_tag = 1 </sql>

    <sql id="sql_column">id,create_time,update_time,del_tag,last_modify_user_id,position_id,user_id</sql>

    <insert id="insertUserPosition" >
        insert into user_position <include refid="sql_column" /> value (null,null,null,1,#{p1.lastModifyUserId},${p1.positionId},#{p1.userId});
    </insert>

    <select id="findUserPosition" resultMap="userPosition">
        select <include refid="sql_column" /> from user_position <include refid="delTag"/> and user_id = #{userId} and position_id = ${position_id};
    </select>


</mapper>